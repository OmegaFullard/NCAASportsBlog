    <!-- SignalR client + live scores script  -->
    <script src="https://cdn.jsdelivr.net/npm/@microsoft/signalr@8.0.0/dist/browser/signalr.min.js"></script>
    <script>
        (function () {
            const connection = new signalR.HubConnectionBuilder()
                .withUrl('/hubs/scores')
                .withAutomaticReconnect()
                .build();

            // UI targets
            const scheduleEl = document.querySelector('.schedule');
            const selectedGameEl = document.createElement('div');
            const playsListEl = document.createElement('div');
            selectedGameEl.style.marginTop = '12px';
            playsListEl.style.marginTop = '10px';
            playsListEl.style.maxHeight = '220px';
            playsListEl.style.overflow = 'auto';
            scheduleEl.parentElement.appendChild(selectedGameEl);
            scheduleEl.parentElement.appendChild(playsListEl);

            let currentGameId = null;

            // SignalR handlers
            connection.on('PlayEvent', play => {
                if (!currentGameId || String(play.GameId) !== String(currentGameId)) return;
                prependPlay(play);
            });

            connection.on('ScoreUpdated', game => {
                if (!currentGameId || String(game.Id) !== String(currentGameId)) return;
                updateScoreDisplay(game);
            });

            connection.start().catch(err => console.error('SignalR connect error:', err));

            // Load games from NCAA API and render schedule
            async function loadGames() {
                try {
                    const res = await fetch('https://ncaa-api.henrygd.me/scoreboard/basketball-men/d1/2025');
                    const data = await res.json();
                    
                    // Map NCAA API structure to expected format
                    const games = data.games?.map(g => ({
                        Id: g.game.gameID,
                        HomeTeam: g.game.home.names.short || g.game.home.names.seo,
                        AwayTeam: g.game.away.names.short || g.game.away.names.seo,
                        HomeScore: g.game.home.score || 0,
                        AwayScore: g.game.away.score || 0,
                        Status: g.game.gameState
                    })) || [];
                    
                    renderSchedule(games);
                } catch (e) {
                    console.error('Failed to load games', e);
                }
            }

            function renderSchedule(games) {
                scheduleEl.innerHTML = '';
                games.forEach(g => {
                    const div = document.createElement('div');
                    div.style.padding = '8px 0';
                    div.style.cursor = 'pointer';
                    div.dataset.gameId = g.Id;
                    div.innerHTML = `<strong>${escapeHtml(g.HomeTeam)}</strong> vs <strong>${escapeHtml(g.AwayTeam)}</strong>
            <div style="color:var(--muted);font-size:13px">Score: ${g.HomeScore} - ${g.AwayScore} · ${escapeHtml(g.Status || '')}</div>`;
                    div.addEventListener('click', () => joinGame(g.Id));
                    scheduleEl.appendChild(div);
                });
            }

            async function joinGame(gameId) {
                if (currentGameId) {
                    try { await connection.invoke('LeaveGame', currentGameId); } catch { }
                }

                currentGameId = gameId;
                try {
                    await connection.invoke('JoinGame', gameId);
                } catch (e) {
                    console.warn('JoinGame failed', e);
                }

                // fetch latest game info and plays from NCAA API
                const [gameRes, playsRes] = await Promise.all([
                    fetch('https://ncaa-api.henrygd.me/scoreboard/basketball-men/d1/2025'),
                    fetch(`/api/games/${gameId}/plays`)
                ]);
                const data = await gameRes.json();
                const gameData = data.games?.find(g => g.game.gameID === gameId);
                
                if (gameData) {
                    const game = {
                        Id: gameData.game.gameID,
                        HomeTeam: gameData.game.home.names.short || gameData.game.home.names.seo,
                        AwayTeam: gameData.game.away.names.short || gameData.game.away.names.seo,
                        HomeScore: gameData.game.home.score || 0,
                        AwayScore: gameData.game.away.score || 0,
                        Status: gameData.game.gameState
                    };
                    
                    const plays = playsRes.ok ? await playsRes.json() : [];
                    
                    renderSelectedGame(game);
                    renderPlays(plays);
                }
            }

            function renderSelectedGame(game) {
                selectedGameEl.innerHTML = `<div style="font-weight:700">${escapeHtml(game.HomeTeam)} ${game.HomeScore} � ${escapeHtml(game.AwayTeam)} ${game.AwayScore}</div>
          <div style="color:var(--muted);font-size:13px">${escapeHtml(game.Status || '')}</div>`;
            }

            function updateScoreDisplay(game) {
                const el = selectedGameEl;
                if (!el) return;
                el.innerHTML = `<div style="font-weight:700">${escapeHtml(game.HomeTeam)} ${game.HomeScore} � ${escapeHtml(game.AwayTeam)} ${game.AwayScore}</div>
          <div style="color:var(--muted);font-size:13px">${escapeHtml(game.Status || '')}</div>`;
            }

            function renderPlays(plays) {
                playsListEl.innerHTML = '<strong style="display:block;margin-bottom:8px">Play-by-play</strong>';
                plays.forEach(p => appendPlay(p, false));
            }

            function prependPlay(play) {
                appendPlay(play, true);
            }

            function appendPlay(play, prepend = false) {
                const item = document.createElement('div');
                item.style.padding = '8px';
                item.style.borderBottom = '1px solid rgba(255,255,255,0.03)';
                item.innerHTML = `<div style="font-size:13px"><strong>${escapeHtml(play.Team || play.team || '')}</strong> � ${escapeHtml(play.Description || play.description || '')}</div>
          <div style="color:var(--muted);font-size:12px">${escapeHtml(play.Quarter || play.quarter || '')} ${escapeHtml(play.Clock || play.clock || '')} � ${new Date(play.Timestamp || play.timestamp).toLocaleTimeString()}</div>`;
                if (prepend) playsListEl.insertBefore(item, playsListEl.children[1] || playsListEl.firstChild);
                else playsListEl.appendChild(item);
            }

            // Utility
            function escapeHtml(s) {
                return String(s || '').replace(/[&<>"']/g, c => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#39;' }[c]));
            }

            // initial load
            loadGames();
        })();
    </script>

    <script>
        // Small client-side behavior � progressive enhancement only.
        document.getElementById('year').textContent = new Date().getFullYear();

        function subscribe() {
            const email = document.getElementById('email').value.trim();
            const msg = document.getElementById('sub-msg');
            // Minimal validation + user feedback; replace with real submission on server integration.
            if (!/^[\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                msg.textContent = 'Please enter a valid email.';
                return;
            }
            msg.textContent = 'Thanks � check your inbox for a confirmation.';
            // For integration: POST to /api/subscribe with fetch()
        }

        // Accessibility helper: visually-hidden class fallback
        (function () {
            const style = document.createElement('style');
            style.textContent = '.sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border:0}';
            document.head.appendChild(style);
        })();

        // Load and display NCAA news articles
        (async function loadArticles() {
            try {
                const res = await fetch('https://ncaa-api.henrygd.me/news/basketball-men/d1');
                const data = await res.json();
                const articlesGrid = document.getElementById('articles-grid');
                
                if (data.articles && data.articles.length > 0) {
                    articlesGrid.innerHTML = '';
                    
                    // Display first 3 articles
                    data.articles.slice(0, 3).forEach((article, index) => {
                        const articleEl = document.createElement('article');
                        articleEl.className = 'post';
                        articleEl.setAttribute('role', 'listitem');
                        articleEl.setAttribute('aria-labelledby', `article-${index}`);
                        
                        const date = new Date(article.published);
                        const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                        
                        articleEl.innerHTML = `
                            <div>
                                <div class="meta">${formattedDate} � ${escapeHtml(article.source || 'NCAA')}</div>
                                <h3 id="article-${index}">${escapeHtml(article.title)}</h3>
                                <p class="excerpt">${escapeHtml(article.description || article.title)}</p>
                            </div>
                            <div style="margin-top:12px">
                                <a href="${escapeHtml(article.link)}" target="_blank" rel="noopener noreferrer" class="btn" style="text-decoration:none;font-size:13px;padding:8px 12px">Read Article</a>
                            </div>
                        `;
                        
                        articlesGrid.appendChild(articleEl);
                    });
                } else {
                    articlesGrid.innerHTML = '<div style="text-align:center;color:var(--muted);padding:20px">No articles available at this time.</div>';
                }
            } catch (e) {
                console.error('Failed to load articles', e);
                document.getElementById('articles-grid').innerHTML = '<div style="text-align:center;color:var(--muted);padding:20px">Unable to load articles. Please try again later.</div>';
            }
        })();

        function escapeHtml(s) {
            return String(s || '').replace(/[&<>"']/g, c => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#39;' }[c]));
        }
    </script>
</body>
